<div id="bonsai-main">
  <h1>Dashboard</h1>
  <ul>
    <% @events.each do |event| %>
        <%= render :partial => "event_#{event.class.to_s.underscore}", :object => event %>
    <% end %>
  </ul>
</div>

<div id="bonsai-sidebar">
  <h2>Watched pages</h2>
  <ul>
    <% current_user.watched_pages.each do |page| %>
        <li><%= link_to page.title, page_path(page) %></li>
    <% end %>
  </ul>
</div>