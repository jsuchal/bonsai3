<div id="toolbar">
  <div class="actions">
    <% if current_user.can_watch? -%>
        <%= render :partial => 'subscription' %>
    <% end -%>
    <% if current_user.can_edit?(@page) %><span class="button action edit"><%= link_to "Edit", edit_wiki_page_path(@page) %></span><% end %>
    <% if current_user.can_view?(@page) %><span class="button action history"><%= link_to "History", history_wiki_page_path(@page) %></span><% end %>
    <span class="button"><%= link_to icon_tag(:rss, :alt => "RSS"), rss_wiki_page_path(@page) %></span>
  </div>
  <div class="userbox">
    <% if current_user.logged_in? -%>
        <%= link_to "Dashboard", wiki_dashboard_path %> <span class="divider">|</span> <%= current_user.name %> (<%= current_user.username %>)
        <span class="divider"> | </span><%= link_to "Log out", wiki_logout_path %>
    <% else -%>
        <%= link_to "Login", wiki_login_path %>
    <% end %> <span class="divider">|</span>
    <%= form_tag search_wiki_pages_path, :method => :get, :class => :search do -%>
        <p><%= text_field_tag :q %><%= submit_tag "Search", :name => nil, :class => :submit %></p>
    <% end %>
  </div>

</div>
<%= render :partial => 'breadcrumbs', :object => @page %>
<h1><%= @page.title %></h1>
<% @page.parts.each do |part| -%>
    <h2><%= part.name %></h2>
    <div><%= markdown(part.current_revision.body) %></div>
<% end -%>